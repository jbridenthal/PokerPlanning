@inject ISnackbar Snackbar


<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1"/>
           CreateRoom
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@newRoomName" Label="Room Name"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="CreateRoom">Create Room</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private string newRoomName = string.Empty;

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void CreateRoom()
    {
        //Snackbar.Add($"Room {newRoomName} Created", Severity.Success);
        MudDialog.Close(DialogResult.Ok(newRoomName));
    }
}
