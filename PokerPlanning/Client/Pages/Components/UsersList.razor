
<MudList Clickable="false" Dense="true">
    <MudListSubheader><MudText Typo="Typo.h4">Users List for @Room</MudText></MudListSubheader>
    <MudListSubheader>
        <MudGrid>
            <MudItem xs="3">User</MudItem>
            <MudItem xs="3">Voted</MudItem>

        </MudGrid>
    </MudListSubheader>
    @foreach (Role item in Enum.GetValues(typeof(Role)))
    {
        List<User> usersForRole = Users.Values.Where(x => x.Role == item).Where(u => u.Room == Room).ToList();
        double average = usersForRole.Average(x => x.Vote.SafeParseInt32());
        string itemText = ShowVotes && average > 0 //skip showing a 0 (no votes)
            ? $"{item} - {average:0.##}"
            : item.ToString();

        <MudListItem Icon="@Icons.Filled.PersonOutline" Text="@itemText" InitiallyExpanded="true">
            <NestedList>
                @foreach (User user in usersForRole)
                {
                    <MudListItem>
                        <MudGrid>
                            <MudItem xs="3">@user.Name</MudItem>
                            <MudItem xs="3">
                                @if (@item != Role.Observer && @item != Role.Moderator)
                                {
                                    @if (!ShowVotes)
                                    {
                                        @if (@user.Vote != null)
                                        {
                                            <MudIcon Icon="@Icons.Filled.Check" Color="@Color.Success" />
                                        }
                                        else
                                        {
                                            <MudIcon Icon="@Icons.Filled.Close" Color="@Color.Error" />
                                        }
                                    }
                                    else
                                    {
                                        @user.Vote
                                        ;
                                    }
                                }
                            </MudItem>
                        </MudGrid>
                    </MudListItem>
                     <MudDivider />
                }
            </NestedList>
        </MudListItem>
    }
</MudList>


@code {
    [Parameter]
    public Dictionary<string, User> Users { get; set; } = new Dictionary<string, User>();

    [Parameter]
    public bool ShowVotes { get; set; }

    [Parameter]
    public string Room { get; set; }

}
